# Sunoo Backend Environment Variables
# Copy this file to .env.local for local development

# Application Configuration
NODE_ENV=development
PORT=3005
CORS_ORIGIN=http://localhost:3000
TZ=Asia/Kolkata

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=your-database-password
DB_NAME=sunooapp

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_TTL=3600

# JWT Configuration - SECURE SETTINGS
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRES_IN=7d
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d
JWT_ISSUER=sunoo-backend
JWT_AUDIENCE=sunoo-app
JWT_ALGORITHM=HS256

# Email Configuration (Zoho Mail)
SMTP_HOST=smtp.zeptomail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=emailapikey
SMTP_PASS=your-smtp-password

# Email Templates Configuration
EMAIL_FROM_NAME=Sunoo Team
EMAIL_FROM_EMAIL=noreply@sunoo.app
EMAIL_BASE_URL=http://localhost:3005
EMAIL_APP_NAME=Sunoo
EMAIL_APP_URL=http://localhost:3000

# Rate Limiting
THROTTLE_TTL=60
THROTTLE_LIMIT=10

# Account Lockout
ACCOUNT_LOCKOUT_ATTEMPTS=5
ACCOUNT_LOCKOUT_DURATION=15

# Swagger Configuration
SWAGGER_TITLE=Sunoo Backend API
SWAGGER_DESCRIPTION=API documentation for Sunoo Backend
SWAGGER_VERSION=1.0.0

# External Services
AWS_S3_HLS_URL=https://your-aws-s3-hls-url.s3.region.amazonaws.com
AWS_REGION=us-east-1
AWS_S3_BUCKET=your-s3-bucket-name
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
RAZORPAY_KEY_ID=your-razorpay-key-id
RAZORPAY_SECRET=your-razorpay-secret

# Webhook Authentication
WEBHOOK_AUTH_TOKEN=your-webhook-auth-token-here

# Firebase Configuration (for Push Notifications)

FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYour private key here\n-----END PRIVATE KEY-----\n"
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@your-project-id.iam.gserviceaccount.com
