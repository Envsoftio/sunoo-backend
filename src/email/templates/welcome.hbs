<html lang='en'>

  <head>

    <meta charset='utf-8' />

    <meta name='viewport' content='width=device-width, initial-scale=1' />

    <title>Welcome to {{appName}}!</title>

    <style>
      body {
        margin: 0;

        padding: 0;

        background: #f6f2fa;

        font-family:
          system-ui,
          -apple-system,
          Segoe UI,
          Roboto,
          Arial,
          sans-serif;
      }

      .wrapper {
        display: flex;

        justify-content: center;

        background: #f6f2fa;
      }

      .card {
        max-width: 600px;

        width: 100%;

        background: #fff;

        border-radius: 12px;

        overflow: hidden;
      }

      .card-topbar {
        height: 8px;

        background: linear-gradient(
          90deg,
          #ff8a00 0%,
          #ff3d81 50%,
          #6f49ff 100%
        );
      }

      .logo {
        text-align: center;

        padding: 32px 24px 30px;
      }

      .logo img {
        max-width: 160px;

        height: auto;
      }

      .content {
        padding: 0 20px 20px;

        text-align: left;
      }

      .content p {
        margin: 0 0 18px;

        font-size: 15px;

        line-height: 26px;

        color: #374151;
      }

      .content h3 {
        margin: 0 0 15px;

        font-size: 18px;

        font-weight: 600;

        color: #111827;
      }

      .highlight {
        background-color: #f0f9ff;

        padding: 20px;

        border-radius: 8px;

        border-left: 4px solid #3b82f6;

        margin: 20px 0;
      }

      .highlight h3 {
        color: #1e40af;

        margin: 0 0 10px 0;
      }

      .highlight p {
        color: #1e40af;

        margin: 0;
      }

      .features {
        margin: 30px 0;
      }

      .feature {
        display: flex;

        align-items: center;

        margin: 15px 0;

        font-size: 15px;

        color: #374151;
      }

      .feature-icon {
        width: 24px;

        height: 24px;

        background-color: #10b981;

        border-radius: 50%;

        margin-right: 15px;

        display: flex;

        align-items: center;

        justify-content: center;

        color: white;

        font-weight: bold;

        flex-shrink: 0;
      }

      .cta {
        text-align: center;

        padding: 10px 0 40px;

        margin-top: 10px;
      }

      .cta a {
        display: inline-block;

        padding: 14px 40px;

        font-size: 16px;

        font-weight: 600;

        color: #fff;

        text-decoration: none;

        border-radius: 999px;

        background: linear-gradient(90deg, #ff8a00, #ff3d81, #6f49ff);
      }

      .verification-box {
        background-color: #fef3c7;

        padding: 25px;

        border-radius: 8px;

        border-left: 4px solid #f59e0b;

        margin: 25px 0;

        text-align: center;
      }

      .verification-box h3 {
        color: #92400e;

        margin: 0 0 15px 0;
      }

      .verification-box p {
        margin: 0 0 20px 0;

        color: #92400e;
      }

      .security-box {
        background-color: #f0f9ff;

        padding: 20px;

        border-radius: 8px;

        border-left: 4px solid #3b82f6;

        margin: 20px 0;
      }

      .security-box h4 {
        color: #1e40af;

        margin: 0 0 10px 0;

        font-size: 16px;
      }

      .security-box p {
        margin: 0;

        color: #1e40af;

        font-size: 14px;
      }

      .footer {
        background: #f5f6f8;

        border-bottom-left-radius: 12px;

        border-bottom-right-radius: 12px;

        padding: 50px 30px 70px 30px;

        text-align: center;
      }

      .footer p {
        margin: 0;

        font-size: 14px;

        line-height: 24px;

        color: #374151;
      }

      .socials {
        display: flex;

        justify-content: center;

        margin: 14px 0;

        gap: 12px;
      }

      .socials a {
        width: 34px;

        height: 34px;

        border-radius: 50%;

        border: 2px solid #c026d3;

        margin-right: 5px;
      }

      .socials a img {
        margin: auto;

        padding: 10px 6px;
      }

      .footer .small {
        font-size: 13px;

        margin-top: 16px;

        margin-bottom: 6px;
      }

      .heart {
        color: #c026d3;
      }

      @media (max-width: 600px) {
        .footer {
          padding: 30px 10px 40px 10px !important;
        }

        .content {
          padding: 0 10px 0 10px !important;
        }

        .content h1 {
          font-size: 16px !important;
        }

        .content h2 {
          font-size: 18px !important;
        }

        .cta a {
          padding: 12px 24px;
          font-size: 14px !important;
        }
      }
    </style>

  </head>

